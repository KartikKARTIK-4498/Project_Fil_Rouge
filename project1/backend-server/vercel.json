{
  "version": 2,
  "name": "your-project-name",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "API_SECRET": "@api_secret"
  },
  "build": {
    "env": {
      "API_SECRET": "@api_secret"
    }
  },
  "regions": ["all"]
}
